#:import utils kivy.clock
<AdminHome>:

    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#85C1E9")
            Rectangle:
                size: self.size
                pos: self.pos

        GridLayout
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, 1
            rows:2

            FloatLayout:
                pos_hint: {'center_y': 0.9, 'center_x': 0.6}
                size_hint: 1, .15
                canvas:
                    Color:
                        rgb:utils.get_color_from_hex("#08274b")
                    Rectangle:
                        pos: self.pos
                        size: self.size


                Label:
                    # Title label
                    pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                    size_hint: .6, 1
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    markup: 'true'
                    text: "[b]Welcome to Queue Buster[/b]"


                Button:
                    text:"Logout"
                    pos_hint: {'center_y': 0.5, 'center_x': 0.9}
                    size_hint: .15, .9
                    background_normal: './buttonlight.png'
                    background_down: './buttonlight.png'
                    border: 1, 1, 1, 1
                    on_release:
                        app.signOut()

            FloatLayout:
                pos_hint: {'center_y': .425, 'center_x': 0.5}
                size_hint: 1, .85

                GridLayout:
                    rows:2
                    pos_hint: {'center_y': .5, 'center_x': 0.5}
                    size_hint: 1, .85
                    padding:60,60,60,60

                    GridLayout:
                        cols:1
                        padding:120,30,120,30

                        Button:
                            text:"Manage Existing Store"
                            pos_hint: {"top": .8}

                            background_color:(0.093,0.448,0.853,1)
                            on_release:
                                app.change_screen("select_store_screen", direction='right', mode='push')

                    GridLayout:
                        cols:1
                        padding:120,30,120,30
                        Button:
                            text:"Add New Store"
                            pos_hint: {"top": 0.4}

                            background_color:(0.093,0.448,0.853,1)
                            on_release:
                                app.change_screen("add_store_screen", direction='right', mode='push')
                                root.getChains()






