#:import utils kivy.clock
<AdminHome>:

    #HomeScreen0- Higher Level Admin

    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#85C1E9")
            Rectangle:
                size: self.size
                pos: self.pos

        GridLayout:
            padding: 10,5
            rows:2
            pos_hint: {"top": 1}
            size_hint: 1, 1


            GridLayout:
                pos_hint: {"top": 1}
                size_hint: 1, .1
                cols:2
                Label:
                    # Title label
                    pos_hint: {"top": 1}
                    size_hint: 0.9, .1
                    text: "Welcome to Queue Buster - Higher Level Admin"

                Button:
                    text:"Log Out"
                    pos_hint: {"top": 1}
                    size_hint: 0.1, .1
                    background_color:(0.093,0.448,0.853,1)
                    on_release:
                        app.change_screen("settings_screen", direction='right', mode='push')

            GridLayout:
                padding: 100,50,50,100
                pos_hint: {"top": .9}
                size_hint: 1, 0.9
                rows:2
                Button:
                    text:"Manage Existing Store"
                    pos_hint: {"top": .8}
                    size_hint: 1, .3
                    background_color:(0.093,0.448,0.853,1)
                    on_release:
                        app.change_screen("select_store_screen", direction='right', mode='push')
                Button:
                    text:"Add New Store"
                    pos_hint: {"top": 0.4}
                    size_hint: 1, .3
                    background_color:(0.093,0.448,0.853,1)
                    on_release:
                        app.change_screen("add_store_screen", direction='right', mode='push')
                        root.getChains()






